    <repository>  
        <id>norconex-release-repo</id>  
        <name>Norconex Release Repository</name>  
        <url>http://norconex.s3.amazonaws.com/repo/release</url>  
        <releases>  
            <enabled>true</enabled>  
        </releases>  
        <snapshots>  
            <enabled>false</enabled>  
        </snapshots>  
    </repository>  

